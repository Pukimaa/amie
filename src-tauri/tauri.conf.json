{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Amie",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "systemTray": {
      "iconPath": "icons/day/1.png",
      "iconAsTemplate": true,
      "title": "Amie"
    },
    "windows": [
      {
        "title": "Amie",
        "url": "https://calendar.amie.so/",
        "maximized": true,
        "width": 1300,
        "height": 800,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "so.amie.pukima",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["icons/day/*.png"]
    }
  }
}
